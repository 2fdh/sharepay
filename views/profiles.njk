{% extends "layout.njk" %}

{% block content %}
<div class="jumbotron">
  <h1 class="display-4">Welcome {{user.firstname}} {{user.name}}</h1>
  <p>{{user.login}}</p>
</div>

<a href="/activities/create">
  <button type="button" class="btn btn-info btn-lg btn-block">Create a new activity</button>
</a>

<h3>Your activities</h3>
<div class="container">
  <div class="row">
{% for activity in activities %}
<div class="col-sm-12 col-md-6 col-lg-4">
<div class="card mb-3" id=card>
<img class="card-img-top" src="https://images.unsplash.com/photo-1505906690561-4dc7060250b6?auto=format&fit=crop&w=1569&q=80" alt="Card image cap">
<div class="card-body">
  <h4 class="card-title">{{activity.title}}</h4>
  <p class="card-text">{{Activity.description}}</p>
  <a href="/activities/{{activity.id}}" class="btn btn-info">Details</a>
  <a href="???" class="btn btn-info">Check-out</a>
  <form method="POST" action="/activities/{{ activity.id }}">
    <button type="submit" class="btn btn-danger">
      Close
    </button>
  </form>
</div>
</div>
</div>
{% endfor %}
</div>
</div>

<br>
<a href="/activities/history">
<button type="button" class="btn btn-danger">See closed activities</button>
</a>

{% endblock %}
