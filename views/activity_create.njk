{% extends "layout.njk" %}

{% block content %}
<div class="jumbotron">
  <h1 class="display-4">Start a new activity</h1>
</div>

<form method="POST" action="/activities/create">
  <div class="form-group">
    <label for="formGroupExampleInput">Activity title</label>
    <input type="text" name="title" placeholder="Activity Title" class="form-control" id="formGroupExampleInput">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Description</label>
    <input type="text" name="description" placeholder="Activity description"class="form-control" id="formGroupExampleInput2">
  </div>
  <div id="attendee" class="form-group">
    <label for="formGroupExampleInput2">Name of an attendee</label>
    <input type="text" name="attendee" placeholder="Attendee name" class="form-control">
  </div>

  <script type="text/javascript" >
           var div = document.getElementById('attendee');
           function addField() {
               div.innerHTML += `  <div id="attendee" class="form-group">
                   <input type="text" name="attendee" placeholder="Attendee name" class="form-control">
                 </div>`;
           }
       </script>
       <button type="button" onclick="addField()" >+</button>


  <button type="submit" class="btn btn-primary">
    Create Activity!
  </button>
  </form>



{% endblock %}
