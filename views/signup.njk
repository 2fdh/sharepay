{% extends "layout.njk" %}

{% block content %}

<div class="jumbotron">
  <h1 class="display-4">Sharepay</h1>
  <p class="lead">A simple way to manage your activities</p>
</div>

  <div class="row justify-content-center">
    <form method="POST" action="/create_user">
      <div class="row justify-content-center">

        <div align="center">
          <div class="form-group">
          <input type="text" name="username" placeholder="email" class="form-control"/>
        </div>

          <div class="form-group">
          <input type="password" name="password" placeholder="Password" class="form-control"/>
          </div>

          <div class="form-group">
          <input type="firstname" name="firstname" placeholder="firstname" class="form-control"/>
          </div>

          <div class="form-group">
          <input type="lastname" name="lastname" placeholder="lastname" class="form-control"/>
          </div>

          <button type="submit" class="btn btn-primary btn-lg">
            Sign up
          </button>
        </div>
      </div>

  </form>
  </div>

{% endblock %}
